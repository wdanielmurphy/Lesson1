<form>
  Item to add:  <input type="text" name="inputitem1" id="inputitem1" 
  value="Initial Value" <br>  
  <button type="button" onclick="itemInsert()">Insert option</button><br><br>

  <select id="itemSelect" size="8" style="min-width:35%;">
    <option>Item1</option>
    <option>Item2</option>
    <option>Item3</option>
    <option>Item4</option>
  </select>
